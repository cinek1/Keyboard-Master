<UserControl x:Class="KeyboardChampion.Controls.ScreenToText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyboardChampion.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
   
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Viewbox HorizontalAlignment="Center" Grid.Row="0" VerticalAlignment="Center">
            <TextBlock Margin="10 0 10 0">Hello World</TextBlock>
        </Viewbox>
        <TextBlock Background="LightGray" Grid.Row="1"> </TextBlock>
        <TextBlock Background="Gray" Grid.Row="2"></TextBlock>
        <TextBlock Background="LightGray" Grid.Row="3"></TextBlock>
        <TextBlock Background="Gray" Grid.Row="4"></TextBlock>
        <TextBlock Background="LightGray" Grid.Row="5"></TextBlock>
    </Grid>
       
</UserControl>
