<UserControl x:Class="KeyboardChampion.Controls.KeyShape"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KeyboardChampion.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="KeyboardKey" Margin="4 4 4 4" CornerRadius="5,5,5,5" Background="White" >

        <TextBlock Text="{Binding Letter}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
    </Border>
</UserControl>
